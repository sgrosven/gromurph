<izpack:shortcuts version="5.0"
                  xmlns:izpack="http://izpack.org/schema/shortcuts"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://izpack.org/schema/shortcuts http://izpack.org/schema/5.0/izpack-shortcuts-5.0.xsd">

  <programGroup defaultName="JavaScore @version@" location="applications"/>
  
  <shortcut
     name="Javascore @version@"
     programGroup="yes"
     desktop="yes"
     applications="no"
     startMenu="yes"
     startup="no"
     target="${INSTALL_PATH}/JavaScore.jar"  
     workingDirectory="${INSTALL_PATH}"   
     commandLine=""
	 iconFile="${INSTALL_PATH}/js32.ico" 
     description="Runs Javascore @version@">
     
     <createForPack name="Base" />
     
   </shortcut>
   
</izpack:shortcuts>
